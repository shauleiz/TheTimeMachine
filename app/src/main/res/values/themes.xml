<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.TheTimeMachine" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->

    </style>

    <style name="Theme.TheTimeMachine" parent="Base.Theme.TheTimeMachine" >
        <item name="faded_text">@color/light_gray</item>
        <item name="blue_text">@color/light_blue_900</item>
        <item name="primary_text">@color/black</item>
    </style>

    <style name="ThemeOverlay.TheTimeMachine.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>

    <style name="Theme.TheTimeMachine.Fullscreen" parent="Theme.TheTimeMachine">
        <item name="android:actionBarStyle">
            @style/Widget.Theme.TheTimeMachine.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="CalendarTheme">

        <item name="textDefault">@color/custom_background_today</item>
        <item name="textDisabled">@color/custom_text_inactive</item>
        <item name="textSelected">@color/custom_text_selected</item>
    </style>

</resources>