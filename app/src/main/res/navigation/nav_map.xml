<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_map"
    app:startDestination="@id/mainActivity">

    <activity
        android:id="@+id/mainActivity"
        android:name="com.product.thetimemachine.ui.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" />
    <fragment
        android:id="@+id/setUpAlarmFragment"
        android:name="com.product.thetimemachine.ui.SetUpAlarmFragment"
        android:label="fragment_set_up_alarm"
        tools:layout="@layout/fragment_set_up_alarm" />
    <fragment
        android:id="@+id/alarmListFragment"
        android:name="com.product.thetimemachine.ui.AlarmListFragment"
        android:label="fragment_alarm_list"
        tools:layout="@layout/fragment_alarm_list" >
        <action
            android:id="@+id/action_alarmListFragment_to_setUpAlarmFragment"
            app:destination="@id/setUpAlarmFragment"
            app:launchSingleTop="true" />
    </fragment>
</navigation>